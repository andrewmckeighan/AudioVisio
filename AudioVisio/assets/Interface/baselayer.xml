<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	
	<useStyles filename="nifty-default-styles.xml" />
  	<useControls filename="nifty-default-controls.xml" />
	
	<screen id="start" controller="audiovisio.states.GuiAppState">
		<layer id="background" backgroundColor="#FFFFFF" childLayout="vertical">
			
			<panel id="panel_title" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<text text="AudioVisio" font="Interface/Fonts/Default.fnt" width="100%" height="100%" color="#000000"/>
			</panel>
			
			<panel id="panel_top" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Host" id="HostButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initHost()"/> 
          		</control>
			</panel>
			
			<panel id="panel_mid" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Join" id="JoinButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initJoin()"/> 
          		</control>
			</panel>
			
			
			<panel id="panel_mid_low" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Settings" id="SettingsButton" height="50%" width="50%" align="center" valign="center"> 
          			<interact onClick="initSettings()"/>
          		</control>
			</panel>
			
			<panel id="panel_bot" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Exit" id="ExitButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="quitAudioVisio()"/>
          		</control>
			</panel>
			
		</layer>
	</screen>
	
	<screen id="settings" controller="audiovisio.states.GuiAppState">
		<layer id="background" backgroundColor="#FFFFFF" childLayout="vertical">
			<panel id="paneltop" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<text text="Settings" font="Interface/Fonts/Default.fnt" width="100%" height="100%" color="#000000"/>
			</panel>
			<panel id="paneltop" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Keybindings" id="ContButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initKeybind()"/>
          		</control>
			</panel>
			<panel id="panel_mid_low" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				
			</panel>
			<panel id="panel_meh" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				
			</panel>
			<panel id="panel" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Back" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="goBack()"/>
          		</control>
			</panel>
		</layer>
	</screen>
	
	<screen id="keybindings" controller="audiovisio.states.GuiAppState">
		<layer id="background" backgroundColor="#FFFFFF" childLayout="vertical">
			<panel id="paneltop" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<text text="Keybindings" font="Interface/Fonts/Default.fnt" width="100%" height="100%" color="#000000"/>
			</panel>
			<panel id="forward" height="12%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Forwards" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initSettings()"/>
          		</control>
			</panel>
			<panel id="backwards" height="12%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Backwards" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initSettings()"/>
          		</control>
			</panel>
			<panel id="left" height="12%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Left" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initSettings()"/>
          		</control>
			</panel>
			<panel id="right" height="12%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Right" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initSettings()"/>
          		</control>
			</panel>
			<panel id="panel" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Back to Settings" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="initSettings()"/>
          		</control>
			</panel>
		</layer>
	</screen>
	
	<screen id="host" controller="audiovisio.states.GuiAppState">
		<layer id="background" backgroundColor="#FFFFFF" childLayout="vertical">
			<panel id="paneltop" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<text text="Host" font="Interface/Fonts/Default.fnt" width="100%" height="100%" color="#000000"/>
			</panel>
			<panel id="panelmid" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Continue" id="ContButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="clientAndServerInit()"/>
          		</control>
			</panel>
			<panel id="panel_fill" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				
			</panel>
			<panel id="panel_mid_low" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				
			</panel>
			<panel id="panel" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Back" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="goBack()"/>
          		</control>
			</panel>
		</layer>
	</screen>
	
	<screen id="join" controller="audiovisio.states.GuiAppState">
		<layer id="background" backgroundColor="#FFFFFF" childLayout="vertical">
			<panel id="paneltop" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<text text="Enter IP Address" font="Interface/Fonts/Default.fnt" width="100%" height="100%" color="#000000"/>
			</panel>
			<panel id="PanelTextField" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control id="input" name="textfield" width="25%"></control>
			</panel>
			<panel id="panelfill" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				<control name="button" label="Continue" id="ContButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="clientInit()"/>
          		</control>
			</panel>
			<panel id="panel_midlow" height="20%" width="100%" align="center" childLayout="center" backgroundColor="#FFFFFF">
				
			</panel>
			<panel id="panel" height="20%" width="100%" align="center" backgroundColor="#FFFFFF" childLayout="center">
				<control name="button" label="Back" id="BackButton" height="50%" width="50%" align="center" valign="center">
					<interact onClick="goBack()"/>
          		</control>
			</panel>
		</layer>
	</screen>
	
</nifty>
